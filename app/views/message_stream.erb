<turbo-stream action="prepend" target="messages">
  <template>
    <%# assistant message's loader %>
    <li id="assistant-answer" class="py-4 border-b border-b-gray-300 dark:border-b-slate-800">
      <div class="sm:flex mb-4 animate-pulse">
        <div class="mb-4 flex-shrink-0 sm:mb-0 sm:mr-4">
          <div class="inline-block h-14 w-14 rounded-full m-1 bg-gray-300 dark:bg-slate-700"></div>
        </div>
        <div class="w-full">
          <h4 class="text-md font-bold flex items-end">
            <div class="h-4 bg-gray-400 dark:bg-slate-600 rounded w-20"></div>
          </h4>
          <div class="mt-4 overflow-x-auto max-w-screen-md">
            <div class="space-y-3">
                <div class="grid grid-cols-3 gap-4">
                  <div class="h-3 bg-gray-300 dark:bg-slate-700 rounded col-span-2"></div>
                  <div class="h-3 bg-gray-300 dark:bg-slate-700 rounded col-span-1"></div>
                </div>
                <div class="h-3 bg-gray-300 dark:bg-slate-700 rounded"></div>
                <div class="grid grid-cols-6 gap-4">
                  <div class="h-3 bg-gray-300 dark:bg-slate-700 rounded col-span-1"></div>
                  <div class="h-3 bg-gray-300 dark:bg-slate-700 rounded col-span-3"></div>
                  <div class="h-3 bg-gray-300 dark:bg-slate-700 rounded col-span-1"></div>
                  <div class="h-3 bg-gray-300 dark:bg-slate-700 rounded col-span-1"></div>
                </div>
              </div>
          </div>
        </div>
      </div>
    </li>

    <%# user's message %>
    <%= erb :message, locals: { message: @message } %>
  </template>
</turbo-stream>
